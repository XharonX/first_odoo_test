<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="form_book_store" model="ir.ui.view">
      <field name="name">form.bookstore.book</field>
      <field name="model">bookstore.book</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
              <div class="o_employee_avatar">
                <field name="image" widget="image" class="oe_avatar m-0" option="{'zoom':true, 'preview_image:'avatar_128'}"/>
              </div>
              <div class="oe_title">
                <h1>
                  <field name='name' placeholder="Enter Book Title" required="True" style="font-size: min(4vw, 2.6rem);"/>
                </h1>
              </div>
          </sheet>
        </form>
      </field>
    </record>
  </data>
</odoo>